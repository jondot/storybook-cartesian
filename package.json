{
  "name": "init-ts-lib",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "init-ts-lib": "dist/index.js"
  },
  "scripts": {
    "start": "tsc -w",
    "watch": "jest --watch",
    "test": "jest",
    "test:bin": "node dist/index.js",
    "release": "yarn build && git commit -am 'build'; yarn version && git push --tags && git push origin master",
    "build": "tsc"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.0",
    "inquirer": "^6.2.0",
    "lodash": "^4.17.11",
    "ora": "^3.0.0",
    "yargs-parser": "^10.1.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/fs-extra": "^5.0.4",
    "@types/inquirer": "^0.0.43",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.11.2",
    "@types/ora": "^1.3.4",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(src/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}